{
    "compilerOptions": {
        /* File Layout */
        "rootDir": "./src",
        "outDir": "./dist",
        /* Environment Settings */
        "module": "CommonJS",
        "moduleResolution": "Node",
        "target": "ES2022",
        "types": [
            "node"
        ],
        "lib": [
            "ES2022"
        ],
        /* Output */
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        /* Strict Type Checking */
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": true,
        /* Interop */
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        /* Performance */
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}